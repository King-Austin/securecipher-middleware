# SecureCipher Middleware Environment Variables Template
# Copy this file to .env and update the values for your environment

# Django Core Settings
SECRET_KEY=your-secret-key-here-generate-a-new-secure-one
DEBUG=True
ENVIRONMENT=development

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,.onrender.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# SecureCipher Crypto Configuration
SIGNATURE_TIMEOUT=300
REQUIRE_ENCRYPTION_FOR_SENSITIVE=True
AUDIT_LOG_RETENTION_DAYS=90
MAX_KEY_AGE_DAYS=365

# Banking API Integration
BANKING_API_URL=http://localhost:8000
BANKING_API_TIMEOUT=30

# Time Zone
TIME_ZONE=Africa/Lagos

# Logging
LOG_LEVEL=INFO
ENABLE_DB_LOGGING=False

# Static Files (for production)
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/mediafiles

# Security Headers (Production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# SecureCipher Specific Settings
MAX_KEY_AGE_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_KEY_ROTATION=True
MAX_SIGNATURE_AGE_MINUTES=30

# Error Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Admin User (for initial setup)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@securecipher.com
DJANGO_SUPERUSER_PASSWORD=change-this-password
